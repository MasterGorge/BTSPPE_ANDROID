<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#F6F5F5">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Galaxy Swiss Bourdin (GSB)"
            android:textAlignment="center"
            android:textSize="25sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:text="Note de frais"/>

        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:stretchColumns="*">

            <TableRow>
                <TextView
                    android:text="Nom"
                    android:textStyle="bold"/>
                <TextView
                    android:text="Prénom"
                    android:textStyle="bold"/>
                <TextView
                    android:text="Mois"
                    android:textStyle="bold"/>
                <TextView
                    android:text="Date"
                    android:textStyle="bold"/>
                <TextView
                    android:text="Hébergement"
                    android:textStyle="bold"/>
                <TextView
                    android:text="Repas"
                    android:textStyle="bold"/>
                <TextView
                    android:text="Transport"
                    android:textStyle="bold"/>
                <TextView
                    android:text="Prix Total"
                    android:textStyle="bold"/>
                <TextView
                    android:text="Autres"
                    android:textStyle="bold"/>
            </TableRow>

            <!-- Add rows dynamically from API response -->
            <!-- Replace this part with your API data retrieval and loop through the data -->
            <!-- Here, I'm adding two example rows -->

            <TableRow>
                <TextView
                    android:id="@+id/nomTextView1"/>
                <TextView
                    android:id="@+id/prenomTextView1"/>
                <TextView
                    android:id="@+id/moisTextView1"/>
                <TextView
                    android:id="@+id/dateTextView1"/>
                <TextView
                    android:id="@+id/hebergementTextView1"/>
                <TextView
                    android:id="@+id/repasTextView1"/>
                <TextView
                    android:id="@+id/transportTextView1"/>
                <TextView
                    android:id="@+id/prixTotalTextView1"/>
                <TextView
                    android:id="@+id/autresTextView1"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:id="@+id/nomTextView2"/>
                <TextView
                    android:id="@+id/prenomTextView2"/>
                <TextView
                    android:id="@+id/moisTextView2"/>
                <TextView
                    android:id="@+id/dateTextView2"/>
                <TextView
                    android:id="@+id/hebergementTextView2"/>
                <TextView
                    android:id="@+id/repasTextView2"/>
                <TextView
                    android:id="@+id/transportTextView2"/>
                <TextView
                    android:id="@+id/prixTotalTextView2"/>
                <TextView
                    android:id="@+id/autresTextView2"/>
            </TableRow>

        </TableLayout>

    </LinearLayout>

</HorizontalScrollView>

